<core:FragmentDefinition xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
	<Dialog title="Select Category" contentWidth="100px">
		<smartFilterBar:SmartFilterBar id="com.pfcindia.apphrmanageclaim.view.fragment.CategorySelectDialog.filterBar" entitySet="ZHR_C_CLAIM" useToolbar="false" showFilterConfiguration="false" showGoOnFB="false">
			<!-- layout data used to make the table growing but the filter bar fixed -->
			<smartFilterBar:layoutData>
				<FlexItemData shrinkFactor="0"/>
			</smartFilterBar:layoutData>
			<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration key="ReimbursementCategory" mandatory="mandatory" filterType="single"/>
			</smartFilterBar:controlConfiguration>
			<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration key="ReimbursementCode" mandatory="mandatory" filterType="single"/>
			</smartFilterBar:controlConfiguration>
			<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration key="ClaimId" visibleInAdvancedArea="false" visible="false"/>
			</smartFilterBar:controlConfiguration>
			<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration key="CreationDate" visibleInAdvancedArea="false" visible="false"/>
			</smartFilterBar:controlConfiguration>
			<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration key="Status" visibleInAdvancedArea="false" visible="false"/>
			</smartFilterBar:controlConfiguration>
		</smartFilterBar:SmartFilterBar>
		<beginButton>
			<Button text="Proceed" type="Emphasized" press="onProceed"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" type="Reject" press="onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>